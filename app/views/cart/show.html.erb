<h1>Cart</h1>

<% if !@items.empty? %>
<center>
<table class = "cart-items">
  <tr>
    <th>Item</th>
    <th>Sold By</th>
    <th>Quantity</th>
    <th>Subtotal</th>
  </tr>
  <% @items.each do |item,quantity| %>
    <tr id= "cart-item-<%=item.id%>">
      <td>
        <p align = "center">
          <span>
            <img align = "center" id="cart-image" src= <%= item.image %>>
            <%=link_to item.name, "/items/#{item.id}" %>
          </span>
        </p>
      </td>
      <td>
        <p align = "center">
          <%=link_to item.merchant.name, "/merchants/#{item.merchant.id}"%>
        </p>
      </td>
      <td>
        <p><%=number_to_currency(item.price)%></p>
      </td>
      <td>
        <center>
          <p><%=quantity%></p>
          <p>
            <%= link_to "+", "/cart/#{item.id}/increment", method: :patch %>
            <%= link_to "-", "/cart/#{item.id}/decrement", method: :patch %>
          </p>
          <p><%= link_to "Remove", "/cart/#{item.id}",method: :delete %></p>
        </center>
        </td>
      <td>
        <p><%=number_to_currency(cart.subtotal(item))%></p>
    </td>
    </tr>
  <% end %>
</table>
  <p>Total: <%= number_to_currency(cart.total) %></p>
  <p><%= link_to "Empty Cart", "/cart", method: :delete %></p>
  <% if current_user %>
  <p>To checkout, please choose an address below to ship these items to:</p>
    <% current_user.addresses.each do |address| %>
    <p><%= link_to "#{address.address_type} Address: #{address.address} #{address.city}, #{address.state} #{address.zip}", "/orders/new/address/#{address.id}", method: :get %></p>
    <% end %>
  <% else %>
  <section id='visitor-checkout-message'>
    <h4>You must <%= link_to "log in", '/login' %> or <%= link_to "register", '/register' %> in order to checkout</h4>
  </section>
  <% end %>
<% else %>
  <h3 align= "center">Cart is currently empty</h3>
<% end %>
<table>
</center>

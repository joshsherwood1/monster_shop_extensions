<h1 align = "center">Order Preview</h1>
<table>
  <tr>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
    <th>Sold By</th>
    <th>Inventory</th>
  </tr>
  <% cart.items.each do |item, quantity| %>
    <tr id='order-item-<%= item.id%>'>
      <td><h2><%= link_to item.name, "/items/#{item.id}" %></h2></td>
      <td><p><%= number_to_currency(item.price) %></p></td>
      <td><p><%= quantity %></p></td>
      <td><p><%= number_to_currency(cart.subtotal(item)) %></p><td>
      <td><p><%= link_to item.merchant.name, "/merchants/#{item.merchant_id}" %></p></td>
      <td><p><%= item.inventory %> in stock</p></td>
    </tr>
  <% end %>
</table>
<h3 align = "right">Total: <%= number_to_currency(cart.total)%></h3>
<center>
  <section class = "shipping-address">
    <h1 align = "center">Shipping Info:</h1>
    <table>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
      </tr>
      <tr>
        <td><p><%= current_user.name %> </p></td>
        <td><p><%= @address.address %> </p></td>
        <td><p><%= @address.city %> </p></td>
        <td><p><%= @address.state %> </p></td>
        <td><p><%= @address.zip %> </p></td>
      </tr>
    </table>
  </section>
  <h2><%= button_to "Create Order", "/orders/address/#{@address.id}" %></h2>
</center>
